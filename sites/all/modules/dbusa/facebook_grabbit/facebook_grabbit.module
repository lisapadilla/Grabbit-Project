		    $node->field_attachment[0]['value']=serialize($post['attachment']);
		
		  if($comments_list)
		    $node->field_comments[0]['value'] = serialize($comments_list);
		
		  $edit->validated = TRUE;
		
		  node_save($node);
		
	    }
	
	  }
	
    }catch(FacebookRestClientException $e){
